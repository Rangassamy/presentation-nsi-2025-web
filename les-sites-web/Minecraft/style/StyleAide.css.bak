/* Global styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4; /* Fond clair pour le reste de la page */
    color: #fff; /* Texte en blanc */
    margin: 0;
    padding: 0;
}

h2 {
    color: #fff;
    text-align: center;
}

/* Container principal des sections */
.section {
    background-color: #000; /* Fond noir pour chaque section */
    color: #fff; /* Texte en blanc */
    padding: 20px;
    margin: 20px 20;
    border-radius: 10px; /* Coins arrondis */
    text-align: left;
	max-width: 800px; /* Limite la largeur de chaque section à 800px */
    width: 90%; /* Largeur maximale de 90% de l'écran, mais pas plus de 800px */
}
.gauche {
	margin: 20px 20;
}
.droite {
	margin: 20px 50%;
}
/* Images dans chaque section */
.section-img {
    width: 50%; /* L'image prend toute la largeur disponible */
    height: 50%; /* Pour garder le ratio de l'image */
    margin: 15px 200;
    border-radius: 5px; /* Coins arrondis pour l'image */ 
}
footer {
	text-align: center;
	padding: 15px;
	background: #4b6cb7
	color: #000000;
	}
	
#header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
}
#logo_buton {
    margin-top: 20px;
    cursor: pointer;
}
.button_slide {
    text-shadow: 0px 0px 5px rgba(0,0,0,1);
    margin: 10px, 10px;
    color: #FFF;
    border: 2px solid rgb(68, 68, 68);
    border-radius: 0px;
    padding: 18px 36px;
    display: inline-block;
    font-family: 'McFont', sans-serif;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: inset 0 0 0 0 #444444;
    transition: ease-out 1s;
  }
  
.slide_down:hover {
    box-shadow: inset 0 100px 0 0 #444444;
  }
  
.slide_right:hover {
    box-shadow: inset 400px 0 0 0 #444444;
  }
  
.slide_left:hover {
    box-shadow: inset 0 0 0 50px #444444;
  }
  
.slide_diagonal:hover {
    box-shadow: inset 400px 50px 0 0 #444444;
  }