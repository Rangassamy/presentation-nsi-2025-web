#header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
}
#logo_buton {
    margin-top: 20px;
    cursor: pointer;
}
.button_slide {
    text-shadow: 0px 0px 5px rgba(0,0,0,1);
    margin: 10px, 10px;
    color: #FFF;
    border: 2px solid rgb(68, 68, 68);
    border-radius: 0px;
    padding: 18px 36px;
    display: inline-block;
    font-family: 'McFont', sans-serif;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: inset 0 0 0 0 #444444;
    transition: ease-out 1s;
  }
  
.slide_down:hover {
    box-shadow: inset 0 100px 0 0 #444444;
  }
  
.slide_right:hover {
    box-shadow: inset 400px 0 0 0 #444444;
  }
  
.slide_left:hover {
    box-shadow: inset 0 0 0 50px #444444;
  }
  
.slide_diagonal:hover {
    box-shadow: inset 400px 50px 0 0 #444444;
  }
