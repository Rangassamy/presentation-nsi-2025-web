@font-face {
    font-family: 'McFont';
    src: url('Minecraft.woff2') format('woff2'), url('Minecraft.woff') format('woff');
}
h1 {
    position: fixed;
    top: 10px;
    left: 5%;
    margin: 2px 0;
    color: #aea6a3;
    background-image: url('../images/stone.png');
    background-size: 2000px;
    image-rendering: pixelated;
    width: 90%;
    height: 90px;
    z-index: 1000;
}
body{
	background-color: black;
}
#main{
	background-image : url(images/logo.png);
}
p1{
text-shadow: 0px 0px 5px rgba(0,0,0,1);
font-family: 'McFont', sans-serif;
font-size: 21px;
padding: 20px;
box-sizing: border-box;
display: flex;
width: 100%;
height: 300px;
color: white;
text-align: left;
align-items: flex-start;
justify-content: flex-start;
background-image: url(images/dirt.png);
background-size: 4000px;
image-rendering: pixelated;
}
p1 span{
    display: inline-block;
    vertical-align: top;
}
p1 img{
    padding-right: 20px;
}

p2{
text-shadow: 0px 0px 5px rgba(0,0,0,1);
font-family: 'McFont', sans-serif;
font-size: 21px;
padding: 20px;
box-sizing: border-box;
display: flex;
width: 100%;
height: 300px;
color: white;
background-color: #5ca633;
text-align: right;
align-items: flex-start;
justify-content: flex-start;
flex-direction: row-reverse;
background-image: url(../images/sand.png);
background-size: 4000px;
image-rendering: pixelated;
}
p2 span{
    display: inline-block;
    vertical-align: top;
}
p2 img{
    padding-left: 20px;
}
p{
	text-align : center;
	background-color: #444444;
	color: black;
	padding: 15px
}


#header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
}
#logo_buton {
    margin-top: 20px;
    cursor: pointer;
}
.button_slide {
    text-shadow: 0px 0px 5px rgba(0,0,0,1);
    margin: 10px, 10px;
    color: #FFF;
    border: 2px solid rgb(68, 68, 68);
    border-radius: 0px;
    padding: 18px 36px;
    display: inline-block;
    font-family: 'McFont', sans-serif;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: inset 0 0 0 0 #444444;
    transition: ease-out 1s;
  }
  
.slide_down:hover {
    box-shadow: inset 0 100px 0 0 #444444;
  }
  
.slide_right:hover {
    box-shadow: inset 400px 0 0 0 #444444;
  }
  
.slide_left:hover {
    box-shadow: inset 0 0 0 50px #444444;
  }
  
.slide_diagonal:hover {
    box-shadow: inset 400px 50px 0 0 #444444;
  }