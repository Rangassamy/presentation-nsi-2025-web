	color: green ;
	background-color: #663300 ; 
	text-align: center;
}

body {
    font-family: 'Courier New', Courier, monospace;
    margin: 0;
    padding: 0;
    background-color: #1b1b1b;
    color: #d4d4d4;
    }

header {
	background: linear-gradient(90deg, #4b6cb7, #182848);
    color: #fff;
    padding: 20px;
    text-align: center;
    border-bottom: 4px solid #4b6cb7;
    }

header h8 {
    margin: 0; 
	font-size: 2.5em;
	text-transform: uppercase;
	letter-spacing: 3px;
	}
	
.content {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 20px;
	padding: 20px;
	max-width: 1200px;
	margin: 0 auto;
	}

.card {
	background: #2c2c2c;
	border-radius: 10px;
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
	padding: 15px;
	transition: transform 0.3s;
    }

.card:hover {
	transform: translateY(-10px);
    }

.card h2 {
	font-size: 1.5em;
	color: #ffcc00;
	margin-bottom: 10px;
	}

.card p {
	line-height: 1.6;
	}

footer {
	text-align: center;
	color: #fff;
	margin-top: 20px;
	}

#header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
}
#logo_buton {
    margin-top: 20px;
    cursor: pointer;
}
.button_slide {
    text-shadow: 0px 0px 5px rgba(0,0,0,1);
    margin: 10px, 10px;
    color: #FFF;
    border: 2px solid rgb(68, 68, 68);
    border-radius: 0px;
    padding: 18px 36px;
    display: inline-block;
    font-family: 'McFont', sans-serif;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: inset 0 0 0 0 #444444;
    transition: ease-out 1s;
  }
  
.slide_down:hover {
    box-shadow: inset 0 100px 0 0 #444444;
  }
  
.slide_right:hover {
    box-shadow: inset 400px 0 0 0 #444444;
  }
  
.slide_left:hover {
    box-shadow: inset 0 0 0 50px #444444;
  }
  
.slide_diagonal:hover {
    box-shadow: inset 400px 50px 0 0 #444444;
  }