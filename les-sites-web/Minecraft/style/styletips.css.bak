h1{
color: green ;
background-color: #663300 ; 
text-align: center;
}
body {
    background-image: url('../images/background.png'); /* Chemin vers l'image */
	backdrop-filter: blur(8px);); /* Pour rendre flou l'image*/
    background-position: center; /* Centrer l'image */
    margin: 0; /* Supprime la marge par d√©faut */
}

section {
	background-color: #F5F5DC;
	margin: 20px auto;
	padding: 20px;
	max-width: 800px;
	border-radius: 10px;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

h2 {
	color: #800020;
	font-size: 2em;
	margin-bottom: 10px;
}
ul {
	padding: 0;
	list-style: none;
}

ul li {
	background-color: #FFB6C1;
	margin: 10px 0;
	padding: 10px;
	border-radius: 5px;
}

p {
	font-size: 1.2em;
	line-height: 1.5;
}

footer {
	text-align: center;
	padding: 10px;
	background-color: #FFB6C1;
}

footer p {
	margin: 0;
}

#header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
}
#logo_buton {
    margin-top: 20px;
    cursor: pointer;
}
.button_slide {
    text-shadow: 0px 0px 5px rgba(0,0,0,1);
    margin: 10px, 10px;
    color: #FFF;
    border: 2px solid rgb(68, 68, 68);
    border-radius: 0px;
    padding: 18px 36px;
    display: inline-block;
    font-family: 'McFont', sans-serif;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: inset 0 0 0 0 #444444;
    transition: ease-out 1s;
  }
  
.slide_down:hover {
    box-shadow: inset 0 100px 0 0 #444444;
  }
  
.slide_right:hover {
    box-shadow: inset 400px 0 0 0 #444444;
  }
  
.slide_left:hover {
    box-shadow: inset 0 0 0 50px #444444;
  }
  
.slide_diagonal:hover {
    box-shadow: inset 400px 50px 0 0 #444444;
  }